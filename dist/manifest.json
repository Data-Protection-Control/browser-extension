{
  "manifest_version": 2,
  "name": "ADPC prototype",
  "version": "0.0.2",
  "description": "Demonstrates the Advanced Data Protection Control mechanism",
  "background": {
    "scripts": [
      "browser-polyfill.js",
      "background/index.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "prototype-extension@dataprotectioncontrol.org"
    }
  },
  "content_scripts": [
    {
      "js": [
        "browser-polyfill.js",
        "content/index.js"
      ],
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon/16.png",
    "19": "icon/19.png",
    "38": "icon/38.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },
  "options_ui": {
    "page": "options/open-options-in-new-tab.html"
  },
  "page_action": {
    "default_popup": "popup/index.html",
    "default_icon": {
        "16": "icon/16.png",
        "19": "icon/19.png",
        "38": "icon/38.png",
        "48": "icon/48.png",
        "128": "icon/128.png"
    },
    "default_title": "Data Protection Control"
  },
  "permissions": [
    "history",
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "web_accessible_resources": [
    "/options/index.html",
    "/popup/*"
  ]
}
